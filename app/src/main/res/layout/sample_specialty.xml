<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_Size_XXXXXX_Large"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="@dimen/padding_Default"
    android:layout_margin="@dimen/margin_Small"
    app:cardCornerRadius="@dimen/radius_Medium"
    app:cardElevation="@dimen/card_Elevation_Small">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/specialty.Icon.Iv"
            android:layout_width="@dimen/icon_Size_XX_Large"
            android:layout_height="@dimen/icon_Size_XX_Large"
            android:layout_marginBottom="@dimen/margin_Small"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_placeholder"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/specialty.Name.Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Small"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Cardiac"
            android:textSize="@dimen/text_Size_X_Small"
            android:textColor="@color/font_Color_Dark"
            android:fontFamily="@font/oxanium_semi_bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
