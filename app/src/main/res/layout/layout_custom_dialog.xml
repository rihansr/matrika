<?xml version="1.0" encoding="utf-8"?>
<com.telemedicine.matrika.wiget.ArcView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    app:shape_arc_cropDirection="outside"
    app:shape_arc_height="@dimen/_12sdp"
    app:shape_arc_position="top"
    android:background="@android:color/transparent"
    tools:context=".fragment.AlertDialogFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_Background"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_X_Large"
        android:paddingTop="@dimen/padding_XX_Large"
        android:paddingEnd="@dimen/padding_X_Large"
        android:paddingBottom="@dimen/padding_Medium"
        tools:ignore="DisableBaselineAlignment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_Medium"
            android:gravity="center"
            android:textColor="@color/font_Color_Dark"
            android:textSize="@dimen/text_Size_Medium"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/permissions"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Small"
            android:layout_marginBottom="@dimen/margin_Small"
            android:gravity="center"
            android:textColor="@color/font_Color_Dark"
            android:textSize="@dimen/text_Size_Small"
            android:visibility="gone"
            tools:text="@string/allowNotificationMessage"
            tools:visibility="visible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Medium"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/leftBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/font_Color_Accent"
                android:textSize="@dimen/text_Size_Small"
                android:visibility="gone"
                tools:text="@string/forbid"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/border_Small"
                android:layout_height="@dimen/_32sdp"
                android:background="@color/colorSmokeWhite"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rightBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/font_Color_Accent"
                android:textSize="@dimen/text_Size_Small"
                android:visibility="gone"
                tools:text="@string/allow"
                tools:visibility="visible" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.telemedicine.matrika.wiget.ArcView>