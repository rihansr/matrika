<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/padding_XX_Large"
    tools:paddingTop="0dp"
    android:orientation="vertical">

    <!--Toolbar-->
    <include layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <!--Logo-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/logo_Size"
            android:layout_height="@dimen/logo_Size"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_round"
            android:padding="@dimen/padding_XX_Large"
            android:tint="@color/icon_Color_Light"
            app:srcCompat="@drawable/ic_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about.Title.Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Default"
            android:text="@string/app_name"
            android:textSize="@dimen/text_Size_X_Large" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about.Subtitle.Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teleMedicine"
            android:textSize="@dimen/text_Size_Small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about.Version.Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Small"
            android:textSize="@dimen/text_Size_Small"
            tools:text="v 1.0.0" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>