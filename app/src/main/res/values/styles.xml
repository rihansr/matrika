<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Launcher.FullDark">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <!--Dialog-->
    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Dialog.FullDark">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <style name="Dialog.TopLight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@style/DialogSliderAnimation</item>
    </style>

    <style name="Dialog.TopLight.SliderAnimation">
        <item name="android:windowAnimationStyle">@style/DialogSliderAnimation</item>
    </style>

    <style name="Dialog.TopLight.FadeAnimation">
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    </style>

    <style name="Dialog.FullDark.FadeAnimation">
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogSliderAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_in_right</item>
    </style>

    <style name="DialogDefaultAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_in_down</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/font_Color_Light</item>
        <item name="android:textSize">@dimen/text_Size_Small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_toast</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>


    <!--Widgets Style-->
    <style name="TitleTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_Color_Dark</item>
        <item name="android:textSize">@dimen/text_Size_Medium</item>
        <item name="android:fontFamily">@font/oxanium_bold</item>
        <item name="android:layout_marginBottom">@dimen/margin_Medium</item>
    </style>

    <style name="HintTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_Color_Accent</item>
        <item name="android:textSize">@dimen/text_Size_XX_Small</item>
        <item name="android:fontFamily">@font/oxanium_regular</item>
        <item name="android:drawablePadding">@dimen/padding_Small</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_Color_Dark</item>
        <item name="android:textColorHint">@color/font_Color_LightGray</item>
        <item name="android:textSize">@dimen/text_Size_Small</item>
        <item name="android:fontFamily">@font/oxanium_regular</item>
        <item name="android:drawableTint">@color/icon_Color_LightGray</item>
        <item name="android:drawablePadding">@dimen/padding_Medium</item>
        <item name="android:background">@drawable/shape_input_field</item>
        <item name="android:paddingTop">@dimen/padding_Medium</item>
        <item name="android:paddingStart">@dimen/padding_X_Large</item>
        <item name="android:paddingEnd">@dimen/padding_X_Large</item>
        <item name="android:paddingBottom">@dimen/padding_Medium</item>
        <item name="android:layout_marginTop">@dimen/margin_Medium</item>
        <item name="android:layout_marginStart">@dimen/margin_XX_Large</item>
        <item name="android:layout_marginEnd">@dimen/margin_XX_Large</item>
        <item name="android:layout_marginBottom">@dimen/margin_Medium</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/font_Color_Light</item>
        <item name="android:textSize">@dimen/text_Size_Small</item>
        <item name="android:fontFamily">@font/oxanium_semi_bold</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:paddingTop">@dimen/margin_Medium</item>
        <item name="android:paddingStart">@dimen/padding_X_Large</item>
        <item name="android:paddingEnd">@dimen/padding_X_Large</item>
        <item name="android:paddingBottom">@dimen/margin_Medium</item>
        <item name="android:layout_marginTop">@dimen/margin_Medium</item>
        <item name="android:layout_marginStart">@dimen/margin_XXXXXX_Large</item>
        <item name="android:layout_marginEnd">@dimen/margin_XXXXXX_Large</item>
        <item name="android:layout_marginBottom">@dimen/margin_Medium</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="RecyclerViewStyle.Horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="RecyclerViewStyle.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="RecyclerViewStyle.Grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="spanCount">2</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>

    <style name="NavItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_Color_Dark</item>
        <item name="android:textSize">@dimen/text_Size_Default</item>
        <item name="android:fontFamily">@font/oxanium_regular</item>
        <item name="android:drawableTint">@color/icon_Color_Dark</item>
        <item name="android:drawablePadding">@dimen/padding_XX_Large</item>
        <item name="android:padding">@dimen/padding_Medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorSmokeWhite</item>
        <item name="android:layout_marginTop">@dimen/margin_Large</item>
        <item name="android:layout_marginBottom">@dimen/margin_Large</item>
    </style>

    <style name="DividerStyle.Large">
        <item name="android:layout_height">@dimen/_6sdp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_Size_XX_Small</item>
        <item name="android:fontFamily">@font/oxanium_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
